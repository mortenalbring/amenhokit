@model Amenhokit.Models.PlayerGame

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>


<div class="row">
    <div class="col-md-4">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)

            <fieldset>
                <legend>PlayerGame</legend>

                <div class="editor-label">
                    @Html.LabelFor(model => model.PlayerID)
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.PlayerID)
                    @Html.ValidationMessageFor(model => model.PlayerID)
                </div>

                <div class="editor-label">
                    @Html.LabelFor(model => model.GameID)
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.GameID)
                    @Html.ValidationMessageFor(model => model.GameID)
                </div>

                <div class="editor-label">
                    @Html.LabelFor(model => model.TotalScore)
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.TotalScore)
                    @Html.ValidationMessageFor(model => model.TotalScore)
                </div>

                <p>
                    <input type="submit" value="Create" />
                </p>
            </fieldset>
        }
    </div>
    <div class="col-md-4">
        @Html.Action("GetPlayerList", "Player")
    </div>
    <div class="col-md-4">
        @Html.Action("GetGameList", "Game")
    </div>
    

</div>


<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
